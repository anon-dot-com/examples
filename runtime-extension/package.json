{
  "name": "runtime-extension",
  "displayName": "Anon Runtime",
  "version": "0.1.0",
  "description": "Your new magic swiss army knife for login.",
  "author": "Anonymity Labs",
  "scripts": {
    "dev": "NODE_PATH='./runtime-extension' ../load_env.js plasmo dev",
    "build": "NODE_PATH='./runtime-extension' ../load_env.js plasmo build",
    "package": "NODE_PATH='./runtime-extension' ../load_env.js plasmo package --source-maps"
  },
  "dependencies": {
    "@anon/sdk-browser-extension": "^0.6.0",
    "dotenv": "16.4.5",
    "jose": "^5.2.4",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@anon/link-types": "^0.5.1",
    "@anon/sdk-typescript": "^0.6.0",
    "@plasmohq/prettier-plugin-sort-imports": "4.0.1",
    "@types/chrome": "0.0.266",
    "@types/node": "20.12.7",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.32.2",
    "prettier": "3.2.5",
    "typescript": "5.4.5",
    "web-push": "3.6.7"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "notifications",
      "scripting",
      "cookies",
      "proxy",
      "webRequest",
      "webRequestAuthProvider"
    ],
    "externally_connectable": {
      "matches": [
        "*://*.anon.com/*"
      ]
    }
  }
}
